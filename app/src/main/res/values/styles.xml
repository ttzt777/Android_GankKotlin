<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="TitleBarImage">
        <item name="android:layout_width">@dimen/title_bar_image_size</item>
        <item name="android:layout_height">@dimen/title_bar_image_size</item>
        <item name="android:padding">@dimen/title_bar_image_padding</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_marginStart">@dimen/title_bar_padding_start</item>
        <item name="android:layout_marginEnd">@dimen/title_bar_padding_end</item>
    </style>

    <style name="TitleBarImage.Back">
        <item name="android:src">@mipmap/ic_back_black</item>
    </style>

    <style name="TitleBarImage.Other">
        <item name="android:src">@mipmap/ic_more_v_black</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="TitleBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_text_primary</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginStart">@dimen/title_bar_text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/title_bar_text_margin_end</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="cc.bear3.gank.ui.today.category.TodayGankCategoryItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/text_line_extra_dp_6"
            android:textColor="@color/app_text_primary"
            android:textSize="16sp"
            android:maxLines="2"
            android:textStyle="bold"
            android:text="@{viewModel.title}"
            tools:text="我是标题"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_8"
            app:imageFromUrl="@{viewModel.imageUrl}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/text_line_extra_dp_6"
            android:textColor="@color/app_text_summary"
            android:textSize="12sp"
            android:lines="1"
            android:text="@{viewModel.time}"
            android:layout_marginTop="@dimen/dp_8"
            tools:text="2020 01-10"
            android:ellipsize="end"/>
    </LinearLayout>
</layout>